<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cys.boot.dao.GoodParamDAO">
	<sql id="allColumn">id,good_id,p_name,p_brand,src_place,com_name,shelf_life,p_id,p_standard,material,typs,size,surface</sql>

	<select id="getGoodParam" parameterType="long" resultType="com.cys.boot.entity.GoodParam">
		select
			<include refid="allColumn"/>
		from t_good_param where id=#{id}
	</select>
	<select id="getGoodParamByGoodId" parameterType="long" resultType="HashMap">
		select
			<include refid="allColumn"/>
		from t_good_param where good_id=#{goodId}
	</select>
	
	
	<insert  id="insertGoodParam" parameterType="com.cys.boot.entity.GoodParam" 
									useGeneratedKeys="true" keyProperty="id">
		insert into t_good_param values(null,#{goodId},#{pName},#{pBrand},#{srcPlace},#{comName},#{shelfLife},#{pId},#{pStandard},#{material},#{typs},#{size},#{surface})
	</insert>
	
	<update id="updateGoodParam" parameterType="com.cys.boot.entity.GoodParam">
		update t_good_param
		<set>
			<if test='pName!=""'>
				p_name=#{pName},
			</if>
			<if test='pBrand!=""'>
				p_brand=#{pBrand},
			</if>
			<if test='srcPlace!=""'>
				src_place=#{srcPlace},
			</if>
			<if test='comName!=""'>
				com_name=#{comName},
			</if>
			<if test='shelfLife""'>
				shelf_life=#{shelfLife},
			</if>
			<if test='pId!=""'>
				p_id=#{pId},
			</if>
			<if test='pStandard!=""'>
				p_standard=#{pStandard},
			</if>
			<if test='material!=""'>
				material=#{material},
			</if>
			<if test='typs!=""'>
				typ=#{typ},
			</if>
			<if test='size!=""'>
				size=#{size},
			</if>
			<if test='surface!=""'>
				surface=#{surface},
			</if>
		</set>
		where id=#{id}
	</update>
	
</mapper>